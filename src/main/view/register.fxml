<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.RegisterController"
            style="-fx-background-image: url('images/ha.jpg');
                   -fx-background-size: cover;
                   -fx-background-position: center;
                   -fx-background-repeat: no-repeat;">

    <children>
        <!-- Container مركزي -->
        <VBox alignment="CENTER" spacing="15" layoutX="100" layoutY="50" prefWidth="400.0">

            <!-- زر الرجوع (Back) -->
            <HBox alignment="CENTER_LEFT" prefWidth="400">
                <Button fx:id="backButton" onAction="#handleBack"
                        style="-fx-background-color: white; -fx-border-color: #15BF8F; -fx-border-radius: 5;
                               -fx-background-radius: 5; -fx-text-fill: #15BF8F; -fx-font-weight: bold;"
                        prefWidth="90" prefHeight="30" text="← Back" />
            </HBox>

            <!-- اللوغو -->
            <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/images/clinic logo.png" />
                </image>
            </ImageView>

            <!-- العنوان -->
            <Text text="Create Account"
                  style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #222;" />

            <!-- حقول الإدخال -->
            <TextField fx:id="fullNameField" promptText="Full Name"
                       prefWidth="350" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;" />

            <TextField fx:id="emailField" promptText="Email"
                       prefWidth="350" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;" />

            <TextField fx:id="phoneField" promptText="Phone"
                       prefWidth="350" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;" />

            <PasswordField fx:id="passwordField" promptText="Password"
                           prefWidth="350" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;" />

            <!-- Gender & Date of Birth (في سطر واحد) -->
            <HBox spacing="20" alignment="CENTER">
                <!-- Gender -->
                <VBox spacing="5" alignment="CENTER_LEFT" prefWidth="160">
                    <Label text="Gender" style="-fx-font-weight: bold;" />
                    <ComboBox fx:id="genderComboBox" prefWidth="150" promptText="Select gender" />
                </VBox>

                <!-- Date of Birth -->
                <VBox spacing="5" alignment="CENTER_LEFT" prefWidth="160">
                    <Label text="Date of Birth" style="-fx-font-weight: bold;" />
                    <DatePicker fx:id="dobPicker" prefWidth="150" promptText="Select date" />
                </VBox>
            </HBox>

            <!-- Role (Patient / Practitioner) -->
            <HBox spacing="30" alignment="CENTER">
                <CheckBox fx:id="patientCheck" text="Patient" />
                <CheckBox fx:id="doctorCheck" text="Practitioner" />
            </HBox>

            <!-- زر التسجيل -->
            <Button fx:id="registerButton" onAction="#handleRegister" prefWidth="350" prefHeight="45"
                    style="-fx-background-color: #15BF8F; -fx-background-radius: 25; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;"
                    onMouseEntered="#onHoverIn" onMouseExited="#onHoverOut">
                <effect>
                    <DropShadow radius="5.0" offsetX="0" offsetY="2" color="#888888"/>
                </effect>
                <text>Register</text>
            </Button>

            <!-- رابط Login -->
            <HBox alignment="CENTER" spacing="5">
                <Text text="Already have an account?" style="-fx-fill: #777; -fx-font-size: 14px;" />
                <Hyperlink fx:id="loginLink" onAction="#goToLogin" text="Login"
                           style="-fx-text-fill: #15BF8F; -fx-font-weight: bold; -fx-underline: true;" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>