<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?> <!-- ✅ هذا هو التعديل المطلوب -->

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ClinicController">

    <!-- Top Green Header -->
    <HBox layoutY="0" prefHeight="60.0" prefWidth="600.0"
          style="-fx-background-color: #15BF8F; -fx-padding: 10 20;">
        <Label fx:id="welcomeLabel"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"
               text="Welcome, Dr. [Name]" />
        <Region HBox.hgrow="ALWAYS" /> <!-- ✅ أصبح <Region> فقط -->
        <Button fx:id="handleLogOut" text="Logout" onAction="#handleLogout"
                style="-fx-background-color: #0C7E5F; -fx-text-fill: white;
                       -fx-font-size: 14px; -fx-padding: 5 15;
                       -fx-border-radius: 20;" />
    </HBox>

    <!-- Message and Button -->
    <Label fx:id="clinicMessage"
           layoutX="160.0" layoutY="150.0"
           style="-fx-font-size: 20px; -fx-text-fill: #333;"
           text="You don't have a clinic yet." />

    <Label layoutX="180.0" layoutY="185.0"
           style="-fx-font-size: 14px; -fx-text-fill: #666;"
           text="Click below to add your clinic" />

    <Button fx:id="addClinicButton" text="Add Clinic"
            onAction="#handleAddClinic"
            layoutX="250.0" layoutY="230.0"
            style="-fx-background-color: #0C7E5F; -fx-text-fill: white;
                   -fx-font-size: 16px; -fx-padding: 10 30;
                   -fx-border-radius: 20;" />

</AnchorPane>